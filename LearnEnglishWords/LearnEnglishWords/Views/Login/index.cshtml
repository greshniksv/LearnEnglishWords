@model LearnEnglishWords.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <link rel="stylesheet" type="text/css" href="/Content/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/site/login.css">
    <link rel="stylesheet" type="text/css" href="/Content/site/common.css">

    <script src="/Scripts/jquery-2.1.4.js"></script>
    <script src="/Scripts/jquery.mobile-1.4.5.js"></script>
    <script src="/Scripts/jquery.validate.js"></script> 

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
    <title> Login page </title>
</head>
<body>
    <div data-role="header">
        <h1> LearnEnglishWords </h1>
    </div>

    <div class="title">
        <p> For enter to the simple smart bookkeeping system, you mast enter the login and password. <br /> Have a nice day. </p>
    </div>

    <form action="/Login/Authorize" method="POST" data-ajax="false">
        <div class="login-block">
            <div class="login">
                <input name="login" type="text" value="@(Model?.Login)" placeholder="Login"/>
                @Html.ValidationMessageFor(model => model.Login)
            </div>

            <div class="password">
                <input name="password" type="password" placeholder="Password"/>
                @Html.ValidationMessageFor(model => model.Password)
            </div>

            <div class="result message-warning">
                <p>@(ViewBag.Error)</p>
            </div>

            <div class="submit">
                <input type="submit" value="Войти" />
            </div>
            
            <div class="submit">
                <input type="button" value="Зарегистрироваться" onclick="Utils.Redirect('/register')" />
            </div>
            
            <div class="submit">
                <input type="button" value="Восстановить пароль" onclick="Utils.Redirect('/register/RestorePassword')" />
            </div>

        </div>
    </form>

</body>
</html>

<script src="/Scripts/Site/login.js"></script>
<script src="/Scripts/Site/Utils.js"></script>