<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="LearnEnglishWords" namespace="LearnEnglishWords.Database.Entities">

  <class name="MainWord" table="MainWords" lazy="true">
    <id name="Id" column="id">
      <generator class="increment" />
    </id>

    <property name="Word" column="word" type="String" index="idx_word"/>
    
  </class>

</hibernate-mapping>

